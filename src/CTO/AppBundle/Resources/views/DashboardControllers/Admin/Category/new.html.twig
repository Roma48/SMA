{% extends '::base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h3>
                {{ title }} категорію:
                <div class="pull-right">
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('admin_ctoCategory_list') }}" class="btn btn-sm btn-default"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;&nbsp;Назад</a>
                    {% elseif is_granted('ROLE_CTO') %}
                        <a href="{{ path('cto_jobs_home') }}" class="btn btn-sm btn-default"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;&nbsp;Назад</a>
                    {% endif %}
                </div>
            </h3>
            <br>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-12 col-xs-12">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="error-handling margin-bottom-15">
                {{ form_label(form.name) }}
                {{ form_widget(form.name) }}
                {{ form_errors(form.name) }}
            </div>

            <br/>
            <div class="text-center">
                <input type="submit" value="{{ title }}" class="btn btn-success">
            </div>
            <div>
                {{ form_rest(form) }}
            </div>
            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}
