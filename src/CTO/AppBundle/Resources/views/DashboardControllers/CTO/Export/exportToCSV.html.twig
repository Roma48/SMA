{% extends "::base.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h3>
                Експорт данних в csv файл:
            </h3>
            <br>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="text-center filter-form">
                {{ form_start(form, {'action': path('cto_export_csvdo'), 'attr': {'novalidate': 'novalidate'}}) }}
                    {{ form_widget(form.dateFrom) }}
                    {{ form_widget(form.dateTo) }}
                    <div class="hidden">
                        {{ form_rest(form) }}
                    </div>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <button type="submit" class="btn btn-default"><i class="fa fa-download"></i>&nbsp;Експорт</button>
                    &nbsp;&nbsp;&nbsp;
                    <a href="{{ path('cto_export_csv') }}" class="btn btn-warning"><i class="fa fa-refresh fa-fw"></i>&nbsp;Reset</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>


{% endblock body %}

{% block javascripts %}
    <script>
        jQuery(function ($) {
            $('.date-picker-cto').datepicker({
                format: "dd.mm.yyyy",
                orientation: "top left",
//            todayBtn: "linked",
                todayBtn: true,
                clearBtn: true,
                language: "uk",
                calendarWeeks: true,
                autoclose: true,
                todayHighlight: true
            });
        });
    </script>
{% endblock javascripts %}
